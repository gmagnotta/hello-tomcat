schemaVersion: 2.2.2
metadata:
  name: hello-jboss
  version: 1.0.0
components:
  - name: s2i-builder
    container:
      image: registry.redhat.io/jboss-webserver-6/jws60-openjdk17-openshift-rhel8@sha256:8ff2a1c968d3cca627e31e2cb9c336dafa651fe2d29cb64827f6cf6e877b6ab3
      memoryLimit: 512Mi
      mountSources: true
      sourceMapping: /tmp/src
      endpoints:
        - name: http
          targetPort: 8080
          protocol: http
      env:
        - name: DEBUG_PORT
          value: '5858'
      volumeMounts:
        - name: deployments
          path: /deployments
  - name: deployments
    volume:
      size: 1Gi
commands:
  - id: s2i-assemble
    exec:
      component: s2i-builder
      workingDir: ${PROJECT_SOURCE}
      commandLine: '/usr/local/s2i/assemble'
      group:
        kind: build
        isDefault: true
  - id: run
    exec:
      component: s2i-builder
      workingDir: ${PROJECT_SOURCE}
      commandLine: '/usr/libexec/s2i/run'
      group:
        kind: run
        isDefault: true
